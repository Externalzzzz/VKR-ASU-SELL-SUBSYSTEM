        <TextBlock Margin="10,10,10,10" TextWrapping="WrapWithOverflow" VerticalAlignment="Center" UseLayoutRounding="False" TextTrimming="WordEllipsis" FontSize="14" FontWeight="Bold" HorizontalAlignment="Left" Width="321"><Run Text="Вас приветствует АСУ  подсистемы управления сбытом готовой продукции,"/><LineBreak/><Run Text="для начала работы авторизируйтесь в системе"/></TextBlock>
        <PasswordBox x:Name="textPass" HorizontalAlignment="Left" Margin="74,7,0,7" Grid.Row="2" VerticalAlignment="Center" Width="257"/>

    </Grid>
</Window>

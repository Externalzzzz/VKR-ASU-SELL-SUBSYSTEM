        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MinHeight="14"/>
        </Grid.RowDefinitions>
        <Label Content="Логин" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" Height="26" Width="44" Padding="0,5,5,5"/>
        <TextBox x:Name="textLogin" TextWrapping="Wrap" Margin="74,7,0,7" Grid.Row="1" HorizontalAlignment="Left" Width="257"/>
        <Label Content="" VerticalAlignment="Center" Margin="56,0,0,0" HorizontalAlignment="Left" Grid.Row="2" Height="26" Width="10"/>
